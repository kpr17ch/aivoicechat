{
  "name": "aivoicechat",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && ./scripts/start_local.sh",
    "dev:db": "docker compose up postgres",
    "start": "concurrently --kill-others --names \"FRONTEND,BACKEND\" -c \"cyan,magenta\" \"npm run dev:frontend\" \"npm run dev:backend\"",
    "start:docker": "docker compose up --build",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && python3 -m venv .venv && source .venv/bin/activate && pip install -r requirements.txt",
    "install:all": "npm install && npm run install:frontend && npm run install:backend"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}
